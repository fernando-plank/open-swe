{
  "version": 2,
  "name": "open-swe-web",
  "buildCommand": "yarn build --filter=@open-swe/web",
  "outputDirectory": "apps/web/.next",
  "installCommand": "yarn install --frozen-lockfile",
  "framework": "nextjs",
  "rootDirectory": "apps/web",
  "functions": {
    "apps/web/src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NEXT_PUBLIC_GITHUB_APP_CLIENT_ID": "@github_app_client_id",
    "GITHUB_APP_CLIENT_SECRET": "@github_app_client_secret",
    "GITHUB_APP_REDIRECT_URI": "@github_app_redirect_uri",
    "GITHUB_APP_NAME": "@github_app_name",
    "GITHUB_APP_ID": "@github_app_id",
    "GITHUB_APP_PRIVATE_KEY": "@github_app_private_key",
    "NEXT_PUBLIC_API_URL": "@next_public_api_url",
    "LANGGRAPH_API_URL": "@langgraph_api_url",
    "SECRETS_ENCRYPTION_KEY": "@secrets_encryption_key"
  },
  "build": {
    "env": {
      "NODE_VERSION": "20",
      "YARN_ENABLE_IMMUTABLE_INSTALLS": "false"
    }
  },
  "regions": ["iad1"],
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./apps/web"
}


